<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.github.abhishekwl.electricsheepprimary.Fragments.TravelFragment">

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/travelBackgroundImageView"
                android:scaleType="centerCrop"
                tools:src="@drawable/train_one"
                android:layout_width="match_parent"
                android:layout_height="496dp" />

            <LinearLayout
                android:padding="24dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travelTitleTextView"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Travel Plan."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/travelSubtitleTextView"
                    android:textSize="18sp"
                    android:text="Find yourself :)"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:padding="18dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/travelFromTextView"
                        android:textSize="28sp"
                        android:textColor="@color/colorAccent"
                        android:text="Bangalore City Junction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/travelDepartureTextView"
                        android:layout_marginTop="8dp"
                        android:textSize="24sp"
                        android:textColor="@color/colorTextDark"
                        android:text="11.30 PM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <com.airbnb.lottie.LottieAnimationView
                    app:lottie_autoPlay="true"
                    android:layout_margin="4dp"
                    app:lottie_fileName="lottie/arrow.json"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/travelToTextView"
                        android:textSize="28sp"
                        android:gravity="end"
                        android:textColor="@color/colorSecondary"
                        android:text="Mangalore City Junction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/travelArrivalTextView"
                        android:layout_marginTop="8dp"
                        android:textSize="24sp"
                        android:gravity="end"
                        android:textColor="@color/colorTextDark"
                        android:text="6.30 AM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:padding="18dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travelClientNameTitleTextView"
                    android:textSize="24sp"
                    android:textColor="@color/colorTextDark"
                    android:text="Client Name: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/travelClientNameTextView"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    tools:text="Abhishek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travelPnrTitleTextView"
                    android:textSize="24sp"
                    android:textColor="@color/colorTextDark"
                    android:text="PNR: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/travelPnrTextView"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    tools:text="1234567890"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travelTicketNumberTitleTextView"
                    android:textSize="24sp"
                    android:textColor="@color/colorTextDark"
                    android:text="Ticket Number: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/travelTicketNumberTextView"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    tools:text="1234567890"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travelTrainNumberTitleTextView"
                    android:textSize="24sp"
                    android:textColor="@color/colorTextDark"
                    android:text="Train Number: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/travelTrainNumberTextView"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    tools:text="1234567890"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travelClassTitleTextView"
                    android:textSize="24sp"
                    android:textColor="@color/colorTextDark"
                    android:text="Class: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/travelClassTextView"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    tools:text="A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travelSeatsTitleTextView"
                    android:textSize="24sp"
                    android:textColor="@color/colorTextDark"
                    android:text="Seats: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/travelSeatsTextView"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    tools:text="5A, 6A, 7F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/travelQrCodeImageView"
            tools:src="@drawable/flash_yellow"
            android:padding="32dp"
            android:background="@android:color/white"
            android:layout_gravity="center"
            android:layout_width="256dp"
            android:layout_height="256dp" />

        <LinearLayout
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/travelAdultsImageView"
                    tools:src="@drawable/adult"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <TextView
                    android:id="@+id/travelAdultsTextView"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:text="Adult(s): 5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travelCostTitleTextView"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:text="Cost (\u20b9)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/travelCostTextView"
                    android:textColor="@color/colorTextDark"
                    android:textSize="18sp"
                    tools:text="6942"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/travelChildrenImageView"
                    tools:src="@drawable/child"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <TextView
                    android:id="@+id/travelChildrenTextView"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:text="Children: 2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
