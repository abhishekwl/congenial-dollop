<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="io.github.abhishekwl.electricsheepprimary.Activities.SignInActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="18dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/signInAppLogoImageView"
            android:layout_marginTop="40dp"
            tools:src="@drawable/energy_white"
            android:layout_width="164dp"
            android:layout_height="164dp" />

        <TextView
            android:id="@+id/signInTitleTextView"
            android:textStyle="bold"
            android:textSize="64sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:text="Sign In."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorTextDark"
            android:fontFamily="sans-serif-light"
            android:textSize="32sp"
            android:text="Electric Sheep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/signInEmailEditText"
            android:hint="EMAIL ADDRESS"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-light"
            android:textColorHint="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/signInPasswordEditText"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-light"
            android:textColorHint="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/signInButton"
            android:src="@drawable/ic_navigate_next_black_24dp"
            app:backgroundTintMode="multiply"
            android:tint="@color/colorAccent"
            android:alpha="0.75"
            app:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="@color/colorAccent"
            android:layout_marginTop="64dp"
            android:layout_gravity="end"
            app:fabSize="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
