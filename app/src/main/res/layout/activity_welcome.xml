<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context="io.github.abhishekwl.electricsheepprimary.Activities.WelcomeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/welcomeAppLogoImageView"
            android:layout_marginTop="40dp"
            tools:src="@drawable/energy_white"
            android:layout_width="164dp"
            android:layout_height="164dp" />

        <TextView
            android:id="@+id/welcomeTitleTextView"
            android:textStyle="bold"
            android:textSize="64sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:text="Welcome."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorTextDark"
            android:textSize="32sp"
            android:text="Electric Sheep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/welcomeSignInButton"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Sign In"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorSecondary"
            android:background="@drawable/round_button_white"
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/welcomeSignUpButton"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Join the community"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/round_button_secondary"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
