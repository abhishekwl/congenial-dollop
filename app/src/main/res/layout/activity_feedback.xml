<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="io.github.abhishekwl.electricsheepprimary.Activities.FeedbackActivity">

    <TextView
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:id="@+id/feedbackTitleTextView"
        android:textSize="48sp"
        android:textColor="@color/colorTextDark"
        android:text="Hey Abhishek!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:text="Could you take a minute and let us know about your experience in your previous trip?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/feedbackRatingBar"
            android:numStars="5"
            android:max="5"
            android:layout_marginTop="128dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/feedbackReviewEditText"
                android:hint="Review (Optional)"
                android:inputType="textCapSentences"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorTextDark"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/feedbackContinueButton"
        android:textColor="@color/colorPrimary"
        android:text="Continue"
        android:textSize="16sp"
        android:background="@color/colorAccent"
        android:layout_marginTop="128dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
